<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ProfileImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                app:srcCompat="@drawable/ic_perm_identity_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/nametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Name       : "
                android:layout_marginTop="303dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/emailtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Email        : "
                android:layout_marginTop="363dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/birthdatetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Birthdate : "
                android:layout_marginTop="423dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/citytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  City           : "
                android:layout_marginTop="483dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gendertxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Gender     : "
                android:layout_marginTop="543dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ProfileName"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:background="@drawable/text_background"
                android:layout_toRightOf="@+id/nametxt"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/ProfileEmail"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:background="@drawable/text_background"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/emailtxt"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/ProfileBirthdate"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="420dp"
                android:background="@drawable/text_background"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/birthdatetxt"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/ProfileCity"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="480dp"
                android:background="@drawable/text_background"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/citytxt"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/ProfilGender"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="540dp"
                android:background="@drawable/text_background"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:text="@string/pwd"
                android:layout_toRightOf="@+id/gendertxt"
                android:padding="5dp"/>


        </RelativeLayout>

    </ScrollView>

</FrameLayout>